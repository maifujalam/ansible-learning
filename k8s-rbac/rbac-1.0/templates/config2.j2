apiVersion: v1
kind: Config
clusters:
- cluster:
    certificate-authority-data: {{cluster_certificate.stdout}}
    server: {{cluster_endpoint.stdout}}
  name: {{cluster_name.stdout}}
contexts:
- context:
    cluster: {{cluster_name.stdout}}
    namespace: default
    user: {{user_name}}
  name: {{cluster_name.stdout}}-{{user_name}}
current-context: {{cluster_name.stdout}}-{{user_name}}
preferences: {}
users:
- name: {{user_name}}
  user:
    client-certificate-data: {{client_certificate.stdout}}
    client-key-data: {{client_key.stdout}}